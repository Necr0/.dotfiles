promptyn () {
    while true; do
        read -p "$1 [Y/n] " yn
        case $yn in
            [Yy]*) return 0;;
            [Nn]*) return 1;;
            ""*) return 0;;
            *) continue;;
        esac
    done
}

promptny () {
    while true; do
        read -p "$1 [y/N] " yn
        case $yn in
            [Yy]*) return 0;;
            [Nn]*) return 1;;
            ""*) return 1;;
            *) continue;;
        esac
    done
}
