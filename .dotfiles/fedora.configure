#!/bin/bash
promptyn () {
    while true; do
        read -p "$1 [Y/n] " yn
        case $yn in
            [Yy]*) return 0;;
            [Nn]*) return 1;;
            ""*) return 0;;
            *) continue;;
        esac
    done
}

if promptyn "Configure shell?"; then
    $HOME/.dotfiles/fedora.configure.shell
fi

if promptyn "Configure display manager?"; then
    $HOME/.dotfiles/fedora.configure.dm
fi